<assembly>
    <id>assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!--需要包含的文件与输出的路径-->
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>/conf</outputDirectory>
            <!-- 去除需要多环境配置的文件-->
            <excludes>
                <exclude>env/</exclude>
            </excludes>
        </fileSet>


        <!--多环境配置文件-->
        <fileSet>
            <!--${env} 可以获取打包命令里的参数-->
            <directory>${project.basedir}/src/main/resources/env/${env}/</directory>
            <outputDirectory>/conf</outputDirectory>
        </fileSet>


        <!-- target目录下的jar包 -->
        <fileSet>
            <directory>${project.build.directory}/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>


        <!-- windows脚本 -->
        <fileSet>
            <directory>${project.basedir}/bin/win</directory>
            <outputDirectory>/bin/win</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <lineEnding>windows</lineEnding>
        </fileSet>


        <!-- unix脚本 -->
        <fileSet>
            <directory>${project.basedir}/bin/unix</directory>
            <outputDirectory>/bin/unix</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>


        <!-- 日志目录 -->
        <fileSet>
            <directory>${project.basedir}/logs</directory>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>

    </fileSets>

    <!-- 依赖管理 -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>