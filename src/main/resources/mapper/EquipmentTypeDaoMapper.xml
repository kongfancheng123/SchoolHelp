<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.agioe.tool.data.dao.EquipmentTypeDao">
    <resultMap id="BaseResultMap" type="com.agioe.tool.data.entity.EquipmentType">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="create_uid" jdbcType="INTEGER" property="createUid"/>
        <result column="write_date" jdbcType="TIMESTAMP" property="writeDate"/>
        <result column="write_uid" jdbcType="INTEGER" property="writeUid"/>
        <result column="equipment_type_code" jdbcType="VARCHAR" property="equipmentTypeCode"/>
        <result column="equipment_type_name" jdbcType="VARCHAR" property="equipmentTypeName"/>
        <result column="default1" jdbcType="VARCHAR" property="default1"/>
        <result column="default2" jdbcType="VARCHAR" property="default2"/>
        <result column="default3" jdbcType="VARCHAR" property="default3"/>
        <result column="default4" jdbcType="OTHER" property="default4"/>
    </resultMap>

    <insert id="insertEquipmentType" parameterType="com.agioe.tool.data.entity.EquipmentType">
         insert into dt_equipment_type_info
        (
        equipment_type_code,
        equipment_type_name
        )values
            (
            #{equipmentType.equipmentTypeCode},
            #{equipmentType.equipmentTypeName}
            )
    </insert>

    <delete id="deleteEquipmentType" parameterType="String">
        delete from dt_equipment_type_info
        where equipment_type_code=#{equipmentTypeCode}
    </delete>

    <select id="selectByEquipmentType" parameterType="com.agioe.tool.data.entity.EquipmentType"
            resultMap="BaseResultMap">
        select *
        from dt_equipment_type_info
        where 1=1
        <if test="equipmentType.id != null">
            and id = #{equipmentType.id}
        </if>
        <if test="equipmentType.equipmentTypeCode != null">
            and equipment_type_code = #{equipmentType.equipmentTypeCode}
        </if>
        <if test="equipmentType.equipmentTypeName != null">
            and equipment_type_name = #{equipmentType.equipmentTypeName}
        </if>
        order by id
    </select>

    <update id="updateEquipmentType" parameterType="com.agioe.tool.data.entity.EquipmentType">
        UPDATE dt_equipment_type_info
        <set>
            <if test="equipmentType.equipmentTypeCode != null">
                equipment_type_code = #{equipmentType.equipmentTypeCode},
            </if>
            <if test="equipmentType.equipmentTypeName != null">
                equipment_type_name = #{equipmentType.equipmentTypeName},
            </if>
        </set>
        WHERE id=#{equipmentType.id}

    </update>

    <select id="selectAll" resultMap="BaseResultMap">
        select * from dt_equipment_type_info
        order by id
    </select>

    <select id="selectByid" resultMap="BaseResultMap">
        select * from dt_equipment_type_info
        where id=#{id}
    </select>


</mapper>